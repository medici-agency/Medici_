{
  "name": "medici/theme",
  "description": "Medici Medical Marketing WordPress Theme - Child theme for GeneratePress Premium",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Medici Agency",
      "homepage": "https://www.medici.agency"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpstan/extension-installer": "^1.4",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/wordpress-stubs": "^6.7",
    "php-stubs/woocommerce-stubs": "^9.4",
    "squizlabs/php_codesniffer": "^3.11",
    "wp-coding-standards/wpcs": "^3.1",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "phpstan": "phpstan analyse --memory-limit=2G --no-progress",
    "phpstan:baseline": "phpstan analyse --generate-baseline --memory-limit=2G --no-progress",
    "phpcs": "phpcs --standard=WordPress inc/ --extensions=php --ignore=vendor/",
    "phpcbf": "phpcbf --standard=WordPress inc/ --extensions=php --ignore=vendor/",
    "lint": [
      "@phpstan",
      "@phpcs"
    ],
    "test": "@lint"
  },
  "scripts-descriptions": {
    "phpstan": "Run PHPStan static analysis",
    "phpstan:baseline": "Generate PHPStan baseline for existing errors",
    "phpcs": "Run PHP CodeSniffer with WordPress standards",
    "phpcbf": "Auto-fix PHP CodeSniffer issues",
    "lint": "Run all linting tools",
    "test": "Run all tests (PHPStan + PHPCS)"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
